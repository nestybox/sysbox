#!/bin/bash

#
# Test container initialization script
#
# TODO:
#
# - If uid-shift, configure without docker userns remap; otherwise config with docker userns remap.
# - How do we capture errors and bail in case any of the script steps fail?
#

# Cmd Line Options
# - uid-shift

# Build & install sysvisor (make && make install)
make && make install

# TODO: Build & install shiftfs (if uid-shift option set)

# Configure dockerd
mkdir -p /etc/docker

if [ -z "$SHIFT_UIDS" ]; then
    cat <<EOF > /etc/docker/daemon.json
{
    "debug": false,
    "userns-remap": "sysvisor",
    "runtimes": {
        "sysvisor-runc": {
            "path": "/usr/local/sbin/sysvisor-runc"
        }
    }
}
EOF
else
    cat <<EOF > /etc/docker/daemon.json
{
    "debug": false,
    "userns-remap": "",
    "runtimes": {
        "sysvisor-runc": {
            "path": "/usr/local/sbin/sysvisor-runc"
        }
    }
}
EOF
fi

# Start sysvisor
sysvisor

# Start docker
dockerd > /var/log/dockerd.log 2>&1 &
