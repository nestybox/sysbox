#!/bin/bash

#
# Launch sysvisor; must be run with root privileges
#

set -e

mkdir -p /var/lib/sysvisorfs

sysvisor-fs --log /dev/stdout > /var/log/sysvisor-fs.log 2>&1 &
sysvisor-mgr --log /dev/stdout > /var/log/sysvisor-mgr.log 2>&1 &

set +e

# wait for sysvisor-fs and sysvisor-mgr
for ((i = 0; i < 10; i++)); do
  if [ -f /var/log/sysvisor-mgr.log ] && [ -f /var/log/sysvisor-fs.log ]; then
    mgr_up=$(grep -c "Listening on" /var/log/sysvisor-mgr.log)
    fs_up=$(grep -c "Starting to serve sysvisor-fs" /var/log/sysvisor-fs.log)
    if [ "$mgr_up" -eq 1 ] && [ "$fs_up" -eq 1 ]; then
      exit 0
    fi
  fi
  sleep 0.5
done

exit 1
