#!/bin/bash

#
# formatJson formats a json file by adding new-lines and indentantion.
# It's useful to make it easier to look a json files generated by
# tools such as Docker, runc, etc.
#
# Requires the python json.tool.
#

# Usage
usage() {
    echo "Usage:"
    echo "$0 <json-file>"
}

if [ $# -ne 1 ] ; then
    usage
    exit 1
fi

cat $1 | python -m json.tool > /tmp/_tmp.json && mv /tmp/_tmp.json $1
